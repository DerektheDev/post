- content_for :javascripts do
  = javascript_include_tag :campaign_dashboard

.row
  .col-sm-6
    .well
      %h2 Choose your Campaign
    #campaign-preview
  .col-sm-6
    %table.table.table-striped.table-condensed
      %thead
        %tr
          %th Campaign Name
          %th Actions
      %tbody
        -@campaigns.each do |campaign|
          %tr
            %td= link_to campaign.name, campaign_path(campaign.id)
            %td
              .btn{class: 'preview btn btn-xs btn-default', cid: campaign.id}
                Preview Campaign
              = link_to 'Delete Campaign', campaign_path(campaign.id), {class: 'btn btn-xs btn-default danger-hover', method: :delete, confirm: "Are you certain you want to delete this campaign? You can't get it back!"}