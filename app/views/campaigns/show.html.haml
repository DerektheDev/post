-content_for :javascripts do
  =javascript_include_tag 'campaign_show'

#dropzone
  .row
    %h4.col-sm-9 Upload files by dragging them onto this dotted area
    #progress-target.col-sm-3

=form_tag select_resource_campaigns_path, remote: true do
  .row
    .col-sm-4#image-resources.resources
      %h4
        %i.fa.fa-picture-o
        Image Resources
      %table.table.table-striped.table-condensed
        %tbody
          -@campaign.resources.images.each do |resource|
            =render partial: "image_resource_row", locals: {resource: resource}
    .col-sm-4#markup-resources.resources
      %h4
        %i.fa.fa-code
        Markup Resources
      %table.table.table-striped.table-condensed
        %tbody
          -@campaign.resources.markups.each do |resource|
            =render partial: "code_resource_row", locals: {resource: resource, resource_type: :markup}
    .col-sm-4#stylesheet-resources.resources
      %h4
        %i.fa.fa-leaf
        Style Resources
      %table.table.table-striped.table-condensed
        %tbody
          -@campaign.resources.stylesheets.each do |resource|
            =render partial: "code_resource_row", locals: {resource: resource, resource_type: :stylesheet}
.row
  %h3.col-sm-9 Output
  = link_to preflight_for_email_on_acid_exports_path, {class: 'col-sm-3 btn btn-xs btn-default'} do
    Export resources for
    %br
    =image_tag 'eoa-favicon.png'
    Email on Acid

.row
  .col-sm-6#compiled-source-preview
  .col-sm-6#compiled-browser-preview
